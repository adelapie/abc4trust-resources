<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

	<!--
	Parameters from German ID:
        	* Document number (9 alphanumeric digits)
                * Surname
                - Doctorate (only if holder holds this degree)
                * Birthname (only if differing from current surname)
                * Given name(s)
                * Date of birth (dd.mm.yyyy)
                - Nationality (DEUTSCH)
                - Place of birth 
                * Date of expiry
                - Colour of eyes
                - XXXX: Height in cm
                * Date of issue
		- Issuing authority
		- Residence
		- Religious name/pseudonym
	-->

<abc:CredentialSpecification xmlns:abc="http://abc4trust.eu/wp2/abcschemav1.0"
                             Version="Version 1.0"
                             KeyBinding="true"
                             Revocable="true"
                             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                             xsi:schemaLocation="http://abc4trust.eu/wp2/abcschemav1.0 ../../../../../../../../abc4trust-xml/src/main/resources/xsd/schema.xsd">
    <abc:SpecificationUID>http://MyFavoriteSoccerTeam/tickets/vip</abc:SpecificationUID>
    <abc:FriendlyCredentialName lang="en">VIP ticket to soccer match</abc:FriendlyCredentialName>
    <abc:FriendlyCredentialName lang="da">VIP billet til fodboldkamp</abc:FriendlyCredentialName>
    <abc:DefaultImageReference>http://MyFavoriteSoccerTeam/tickets/vip/img</abc:DefaultImageReference>
    <abc:AttributeDescriptions MaxLength="256">
        <abc:AttributeDescription Type="http://abc4trust.eu/wp2/abcschemav1.0/revocationhandle" DataType="xs:integer" Encoding="urn:abc4trust:1.0:encoding:integer:unsigned"/>
        <abc:AttributeDescription Type="FirstName" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Name</abc:FriendlyAttributeName>
            <abc:FriendlyAttributeName lang="da">Fornavn</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="LastName" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Lastname</abc:FriendlyAttributeName>
            <abc:FriendlyAttributeName lang="da">Efternavn</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="BirthName" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Birthname</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="DocumentNumber" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Document Number</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="DateOfBirth" DataType="xs:date" Encoding="urn:abc4trust:1.0:encoding:date:unix:signed">
            <abc:FriendlyAttributeName lang="en">Date of birth</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="DateOfExpiry" DataType="xs:date" Encoding="urn:abc4trust:1.0:encoding:date:unix:signed">
            <abc:FriendlyAttributeName lang="en">Date of expiry</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="DateOfIssue" DataType="xs:date" Encoding="urn:abc4trust:1.0:encoding:date:unix:signed">
            <abc:FriendlyAttributeName lang="en">Date of Issue</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="Doctorate" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Doctorate</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="Nationality" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Nationality</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="PlaceOfBirth" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">PlaceOfBirth</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="ColorOfEyes" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">ColorOfEyes</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="IssuingAuthority" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">IssuingAuthority</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="Residence" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">Residence</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
        <abc:AttributeDescription Type="ReligiousName" DataType="xs:string" Encoding="urn:abc4trust:1.0:encoding:string:sha-256">
            <abc:FriendlyAttributeName lang="en">ReligiousName</abc:FriendlyAttributeName>
        </abc:AttributeDescription>
    </abc:AttributeDescriptions>
</abc:CredentialSpecification>
